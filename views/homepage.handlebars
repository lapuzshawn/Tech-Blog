
<div class="container-fluid">
    {{#each posts as |post| }}
    <div class="card mb-4 rounded-bottom blog-post" id="blog-post" data-post-id="{{ post.id }}">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white"
            data-post-id="{{ post.id }}">
            <h5 class="card-title">{{ post.name }}</h5>
            <p class="m-0">Posted by {{ post.user.name }} on {{format_date post.date_created}}</p>
        </div>
        <div class="card-body bg-light" id="B-{{ post.name }}" data-post-id="{{ post.id }}">
            <p class="card-text">{{ post.description }}</p>
        </div>
    </div>
    {{/each}}
</div>